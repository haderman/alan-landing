---
import brandVscodeSVG from "../assets/brand-vscode.svg?raw";
---

<a
  target="_blank"
  href="https://marketplace.visualstudio.com/items?itemName=haderman.alanai"
>
  <Fragment set:html={brandVscodeSVG} />
  <span>Install for Free</span>
</a>

<style>
  a {
    font-family: system-ui, sans-serif;
    text-decoration: none;
    position: relative;
    z-index: 2;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 8px 16px;
    border-radius: 4px;
    background: hsl(261.6deg 51.87% 47.25%);
    color: hsl(261.6deg 51.87% 95.25%);
    transition: background-color 250ms ease-in-out;
  }

  a:hover {
    border-color: hsl(211 81% 93%);
    background-color: hsl(261.6deg 51.87% 27.25%);
  }
  /* a:hover::after {
    background-color: hsl(256, 66%, 48%);
    filter: blur(45px);
  }

  a:hover::before {
    background-color: hsl(210 60% 46% / 1);
  } */

  /* a:focus::after {
    animation: shine 2s linear infinite;
  }

  a:focus::before {
    animation: shine 2s linear infinite;
  } */

  @keyframes shine {
    0% {
      transform: translateX(-100%);
      border: 0.5px solid hsl(210 40% 20%);
    }
    50% {
      transform: translateX(100%);
      border: 1px solid hsl(210 40% 40%);
    }
    100% {
      transform: translateX(-100%);
      border: 0.5px solid hsl(210 40% 20%);
    }
  }
</style>
