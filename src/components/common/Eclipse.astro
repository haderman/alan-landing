---
import bgSvg from '../../assets/backgrounds/grid.svg?raw';
---

<div class="eclipse">
  <Fragment set:html={bgSvg} />
</div>

<style is:global>
  .eclipse {
    --color: hsla(199, 98%, 48%, 1);

    @media screen and (min-width: 720px){
      --color: hsla(199, 98%, 48%, 0.5);
    }

    pointer-events: none;
    user-select: none;
    position: relative;
    width: min(1200px, 100%);
    width: 100%;
    height: 600px;
    margin-inline: auto;
    margin-top: -300px;
    overflow: hidden;
    mask-image: radial-gradient(circle, black, transparent 80%);

    &::before {
      content: "";
      position: absolute;
      inset: 0px;
      background: radial-gradient(circle at bottom center, var(--color), transparent 70%);
      opacity: 0.4;
    }

    &::after {
      content: "";
      position: absolute;
      background: black;
      width: 200%;
      left: -50%;
      aspect-ratio: 1 / 0.7;
      border-radius: 50%;
      border-top: 1px solid hsla(199, 98%, 48%, 0.4);
      top: 50%;
    }

    & svg {
      stroke: hsla(0, 0%, 100%, .05);
      mask-image: radial-gradient(75% 100% at bottom center, #fff, transparent);
      height: 100%;
      left: 0;
      position: absolute;
      top: 0;
      inset: 0;
      width: 100%;
    }
  }

</style>
