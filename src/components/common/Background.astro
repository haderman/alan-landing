---
import bgSvg from '../../assets/backgrounds/grid.svg?raw';
---

<div class="background">
  <div class="light"></div>
  <Fragment set:html={bgSvg} />
</div>

<style>
  .background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;

    .light {
      /* background-image: radial-gradient(80% 50% at 50% -20%, rgba(94, 176, 239, .5), hsla(0, 0%, 100%, 0)); */
      background-image: radial-gradient(80% 50% at 50% -20%, rgb(3 169 244 / 27%), hsla(0, 0%, 100%, 0));
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      inset: 0;
    }

    & > svg {
      stroke: hsla(0, 0%, 100%, .05);
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      inset: 0;
      mask-image: radial-gradient(75% 50% at top center, #fff, transparent);
    }
  }
</style>
