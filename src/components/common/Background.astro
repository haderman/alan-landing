---
import Fog from "./Fog.astro";
import Sky from "./Sky.astro";
---

<div class="background">
  <div class="circles-wrapper">
    <div class="circle"></div>
    <!-- <div class="circle"></div>
    <div class="circle"></div> -->
  </div>
  <div class="glass"></div>
  <Sky />
  <div class="frog-wrapper">
    <Fog />
  </div>
</div>

<style lang="scss">
  .background {
    position: fixed;
    z-index: 0;
    width: 100vw;
    height: 100%;
    /* The image used */
    // background-image: url("https://raw.githubusercontent.com/haderman/alan-docs/main/screenshots/landing-hero.png");

    /* Full height */
    height: 100%;

    background: linear-gradient(
      178.1deg,
      hsl(202deg 86% 10% / 30%) 8.5%,
      hsl(241deg 86% 0% / 50%) 82.4%
    );

    /* Create the parallax scrolling effect */
    background-attachment: fixed;
    background-position: center;
    // background-repeat: no-repeat;
    background-size: cover;

    & >:global(.stars-wrapper) {
      z-index: 2;
    }

    & > .circles-wrapper {
      z-index: 0;
    }
    & > .glass {
      z-index: 1;
    }
    & > .frog-wrapper {
      z-index: 2;
    }
  }
  .frog-wrapper {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
  }
  .glass {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background-color: hsl(210 0% 0% / 0.5);
    backdrop-filter: blur(40px);
  }
  .circles-wrapper {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
  }
  .circle {
    position: absolute;
    width: 25%;
    // aspect-ratio: 1 / 1;
    bottom: 10%;
    left: 0;
    border-radius: 50%;

    width: 90%;
    height: 20vh;
    top: 80px;
    left: 50%;
    transform: translateX(-50%);
    box-shadow: 0px 0px 20px 20px hsl(291 64% 42% / 0.85),
      inset 0px 0px 20px 20px hsl(291 64% 42% / 0.85);

    border-radius: 20%;
    width: 90%;
    aspect-ratio: unset;
    height: 25vh;
    top: 12%;

    &::after {
      content: "";
      position: absolute;
      width: 100%;
      height: 100%;
      border-radius: 50%;
      background: #3F51B5;
      box-shadow: 0px 0px 20px 20px hsl(291, 64%, 42% / 0.85),
        inset 0px 0px 20px 20px hsl(291, 64%, 42% / 0.85);
    }

