---
import githubSvg from "../assets/brand-github.svg?raw";
---

<a class="link-github" target="_blank" href="https://github.com/haderman/alan-landing">
  <Fragment set:html={githubSvg} />
</a>

<style is:global>
  .link-github {
    position: absolute;
    top: 5px;
    right: 5px;
    padding: 10px;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: black;
    border: 1px solid hsl(210 10% 40%);
    color: hsl(210 10% 40%);
    border-radius: 50%;
  }
  .link-github:hover {
    border-color: hsl(210 10% 70%);
  }
  .link-github svg {
    color: hsl(210 10% 40%);
    stroke-width: 0.5px;
    width: 32px;
    height: 32px;
  }
  .link-github:hover svg {
    color: hsl(210 10% 70%);
  }
</style>
