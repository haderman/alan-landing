---
import Squircle from "../common/Squircle.astro";
import Background from "./Background.astro"

const { title, description, color, icon } = Astro.props;
---

<article class="feature-card">
  <Background seed={title} />
  <div class="content">
    <Squircle />
    <picture set:html={icon}></picture>
    <h2>{title}</h2>
    <p>{description}</p>
  </div>
</article>

<style lang="scss" define:vars={{ color }}>
  article {
    aspect-ratio: 4 / 3;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    --h: var(--color);
    --s: 20%;
    & > :global(div:first-child) {
      opacity: 0.7;
      transition: opacity 250ms ease-in-out;
    }
    &:hover {
      --s: 100%;
      & > :global(div:first-child) {
        opacity: 1;
      }
    }
    & > .content {
      z-index: 1;
      position: relative;
    }
    & > .bg-wrapper {
      z-index: 0;
      position: absolute;
    }
  }
  picture {
    z-index: 1;
    & > svg {
      stroke: red;
    }
  }
  .content {
    width: 100%;
    padding: 1rem;
    display: flex;
    flex-direction: column;

    justify-content: center;
    gap: 1rem;
    & h2 {
      z-index: 1;
      color: #e3e3e3;
      font-size: 1.3rem;
      font-weight: 500;
      text-align: left;
    }
    & p {
      z-index: 1;
      color: hsl(0 0% 50% / 1);
      font-size: 1rem;
      font-weight: 400;
      text-align: left;
    }
  }

  @keyframes fade-in {
    from {
      opacity: 0;
      visibility: hidden;
    }
    to {
      opacity: 1;
      visibility: visible;
    }
  }
  @keyframes fade-out {
    from {
      opacity: 1;
      visibility: visible;
    }
    to {
      opacity: 0;
      visibility: hidden;
    }
  }
</style>
