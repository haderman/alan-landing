<style is:global lang="scss">
  :root {
    --primary-color: hsl(210deg 30% 2%);
    // --color: 210deg 27% 7%;

    --surface-1: hsl(210deg 27% 7%);
    --surface-2: hsl(210deg 27% 7% / 50%);
    --surface-3: hsl(210deg 6% 10%);
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  html {
    margin: 0;
    padding: 0;
    height: 100%;
    overflow: hidden;
  }

  body {
    --padding-left-right: clamp(10px, 3vw, 48px );
    --primary-text: hsl(210, 10%, 70%);
    --header-height: 80px;
    --logo-size: 48px;

    margin: 0;
    padding: 0;
    overflow-y: auto;
    overflow-x: hidden;
    height: 100%;
    color: var(--primary-text);
    background-color: var(--surface-1);
  }

  main {
    display: block;
    overflow: hidden;
  }

  footer {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100px;
    background-color: var(--surface-2);
    backdrop-filter: blur(10px);
    color: var(--primary-text);
    font-size: 0.8rem;
    & > p {
      margin: 0;
    }
    & > p > a {
      color: inherit;
      text-decoration: none;
      &:hover {
        text-decoration: underline;
      }
    }
  }

  header {
    position: sticky;
    top: 0;
    z-index: 2;
    backdrop-filter: blur(10px);
    height: var(--header-height);
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: var(--surface-2);
    display: flex;
    justify-content: space-between;
    padding: 12px var(--padding-left-right);
    & > img {
      height: var(--logo-size);
      width: var(--logo-size);
    }
    & > nav {
      display: flex;
      gap: 24px;
      & > a {
        color: inherit;
        text-decoration: none;
        font-size: 1rem;
        font-weight: 500;
        &:hover {
          text-decoration: underline;
        }
      }
    }
  }

  header img {
    width: 48px;
    height: 48px;
  }

  section {
    position: relative;
    padding: 5rem var(--padding-left-right);
  }

  .hero {
    display: flex;
    flex-direction: row-reverse;
    gap: 3rem;
    align-items: center;
    flex-wrap: wrap;
    height: 100%;
    position: relative;

    & > div:first-child {
      flex-grow: 1;
      flex-shrink: 1;
      flex-basis: 960px;
    }
    & > article {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      gap: 2rem;
      flex-shrink: 1;
      flex-grow: 1;
      flex-basis: 300px;
      margin: auto;
      & > ul {
        --pad-left: 2rem;
        list-style-type: none;
        padding-left: 0;
        margin-left: var(--pad-left);
        & > li {
          position: relative;
          margin-bottom: .5em;
          font-weight: 500;
          line-height: 1.5;
          font-size: 1em;
          & > svg {
            position: absolute;
            left: calc(var(--pad-left) * -1);
            top: 2px;
          }
        }
      }
    }
  }

  .features {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 50ch));
    grid-template-rows: 1fr 1fr;
    justify-content: center;
    align-items: stretch;

    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    flex-grow: 1;
    flex-shrink: 1;
    flex-basis: 200px;
    gap: 4rem;

    & > article {
      position: relative;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-shrink: 1;
      flex-grow: 1;
      flex-basis: 300px;
      border-radius: 8px;
      background-image: linear-gradient(135deg,rgba(255,254,241,0.02),rgba(255,254,241,-0.01));
      & > div {
        z-index: 1;
        width: 100%;
        height: 100%;
        -webkit-backface-visibility: hidden;
        backface-visibility: hidden;
        background-color: linear-gradient(135deg,rgba(255,254,241,.02),rgba(255,254,241,0));
        border-radius: 20px;
        flex-direction: column;
        padding: 2rem;
        gap: 1rem;
        display: flex;
        position: relative;
        overflow: hidden;
        transform: translate(0);
        justify-content: center;
      }
      & h2 {
        font-size: 1.5rem;
        font-weight: 500;
        text-align: left;
        color: hsl(0 0% 89% / 1);
      }
      & p {
        color: hsl(0 0% 79% / 1);
        font-size: 1rem;
        font-weight: 100;
        text-align: left;
      }
      &::before {
        content: "";
        position: absolute;
        top: 0px;
        bottom: 0px;
        left: 0px;
        right: 0px;
        opacity: 0;
        will-change: background, opacity;
        transition-duration: 400ms;
        transition-timing-function: ease;
        transition-delay: 0s;
        transition-property: opacity;
        background-image: radial-gradient( 600px at var(--cursor-x) var(--cursor-y), rgba(255, 254, 241, 0.15), transparent 40% );
        background-size: auto;
        background-origin: padding-box;
        z-index: 1;
      }
    }
  }

  video {
    width: 100%;
    height: 100%;
    border-radius: 16px;
    box-shadow: 0 0 7px 3px rgba(0, 0, 0, 0.5);
  }

  .headline {
    font-size: clamp(1.5rem, 6vw, 3rem);
    color: whitesmoke;
  }

  .text-gradient {
    background: linear-gradient(120deg, #9c27b0 20%, #00BCD4);
    background-clip: text;
    -webkit-text-fill-color: transparent;
    -webkit-box-decoration-break: clone;
  }

  /*
   * Scrollbar style
   */
  ::-webkit-scrollbar {
    width: 8px;
  }

  ::-webkit-scrollbar-track {
    background: hsl(0, 0%, 15%);
  }

  /* Handle */
  ::-webkit-scrollbar-thumb {
    background: hsl(210 30% 30%);
    border-radius: 10px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: #555;
  }
</style>
