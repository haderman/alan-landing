---
import { Image } from 'astro:assets';
import logoSrc from '../assets/alan.svg';
import Layout from '../layouts/Layout.astro';
import Banner from '../components/Banner.astro';
import Background from '../components/Background.astro';
import LinkGithub from '../components/LinkGithub.astro';
import Button from "../components/Button.astro";
import IconCircleCheckSrc from '../components/IconCircleCheck.astro';
---

<Layout title="Welcome to Alan Chat.">
  <!-- <Background /> -->
  <header>
    <div>
      <Image src={logoSrc} alt="Alan logo" />
    </div>
    <nav>
      <a href="#">About</a>
      <a href="#">FAQs</a>
    </nav>
  </header>
  <main>
    <section class="hero">
      <div>
        <video
          autoplay
          muted
          loop
          playsinline
          onloadstart="this.playbackRate = 2;"
        >
          <source src="demo-astro.mp4" type="video/mp4" />
        </video>
      </div>
      <article>
        <h1 class="headline text-gradient">
          AI code chat right in the IDE
        </h1>
        <ul>
          <li>
            <IconCircleCheckSrc />
            <span>
              Harness the power of OpenAI's GPT models right within your VS Code editor
            </span>
          </li>
          <li>
            <IconCircleCheckSrc />
            <span>Create multiple custom chat agents for different coding scenarios</span>
          </li>
          <li>
            <IconCircleCheckSrc />
            <span>Interact with an intelligent AI assistant while maintaining utmost data privacy and security</span>
          </li>
        </ul>
        <Button />
      </article>
    </section>
    <section class="features">
      <!-- <Background /> -->
      <article>
        <div>
          <h2>Custom Agents for Your Needs</h2>
          <p>
            Create custom chat agents for different topics or
            individuals. Get assistance and interaction that's
            perfectly tailored to your projects.
          </p>
        </div>
      </article>
      <article>
        <div>
          <h2>Local Data Storage</h2>
          <p>
            Your conversation data is safely stored locally on your machine
            for maximum data privacy and security.
          </p>
        </div>
      </article>
      <article>
        <div>
          <h2>OpenAI Integration</h2>
          <p>
            Leverage the global accessibility and powerful assistance of
            OpenAI's GPT models in your coding journey.
          </p>
        </div>
      </article>
      <article>
        <div>
          <h2>Secure API Key Storage</h2>
          <p>
            Your OpenAI API key is securely stored using VS Code's secure
            storage mechanism, keeping your sensitive information safe.
          </p>
        </div>
      </article>
      <!-- <article>
        <h2>Completely Free</h2>
        <p>
          Enhance your coding experience without shelling out a
          single dime. Harness the power of AI at zero cost with Alan!
        </p> -->
      </article>
    </section>
    <!-- <div>
      <Background />
    </div>
    <div>
      <h1 class="headline">
        AI code chat right in the IDE
      </h1>
      <Button />
    </div> -->
    <!-- <Banner /> -->
    <!-- <Banner />
    <LinkGithub /> -->
  </main>
